/* groovylint-disable LineLength */
pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                echo 'Deploying..'
                sshagent(['ssh-deploy']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no -l root 68.183.33.222
                    "docker compose stop"
                    "docker compose rm app -f"
                    "docker compose pull"
                    "docker compose up"
                    '''
                }
            }
        }
    }
}
